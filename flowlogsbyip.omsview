{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": ""
        },
        "resourcegroup": {
            "type": "string",
            "defaultValue": ""
        },
        "subscriptionId": {
            "type": "string",
            "defaultValue": ""
        },
        "workspace": {
            "type": "string",
            "defaultValue": ""
        },
        "workspaceapiversion": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "resources": [
        {
            "apiVersion": "[parameters('workspaceapiversion')]",
            "name": "[parameters('workspace')]",
            "type": "Microsoft.OperationalInsights/workspaces",
            "location": "[parameters('location')]",
            "id": "[Concat('/subscriptions/', parameters('subscriptionId'), '/resourceGroups/', parameters('resourcegroup'), '/providers/Microsoft.OperationalInsights/workspaces/', parameters('workspace'))]",
            "resources": [
                {
                    "apiVersion": "2015-11-01-preview",
                    "name": "Flow logs by IP",
                    "type": "views",
                    "location": "[parameters('location')]",
                    "id": "[Concat('/subscriptions/', parameters('subscriptionId'), '/resourceGroups/', parameters('resourcegroup'), '/providers/Microsoft.OperationalInsights/workspaces/', parameters('workspace'),'/views/Flow logs by IP')]",
                    "dependson": [
                        "[Concat('/subscriptions/', parameters('subscriptionId'), '/resourceGroups/', parameters('resourcegroup'), '/providers/Microsoft.OperationalInsights/workspaces/', parameters('workspace'))]"
                    ],
                    "properties": {
                        "Id": "Flow logs by IP",
                        "Name": "Flow logs by IP",
                        "Author": null,
                        "Source": "Local",
                        "Version": 2,
                        "Dashboard": [
                            {
                                "Id": "TwoNumberTileListBuilderBlade",
                                "Type": "Blade",
                                "Version": 0,
                                "Configuration": {
                                    "General": {
                                        "title": "Distribution by Computer",
                                        "newGroup": false,
                                        "icon": "",
                                        "useIcon": false
                                    },
                                    "Tile": {
                                        "Legend": "IPs under mitigation for this period",
                                        "Query": "AzureDiagnostics | where Category like \"ddosprotectionnotifications\" | summarize arg_max(TimeGenerated, *) by publicIpAddress_s | where type_s like \"mitigationstarted\" | summarize count()"
                                    },
                                    "SecondTile": {
                                        "Legend": "packets dropped (1/1000 Sample rate)",
                                        "Query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" | where not(Message contains \"forwarded\") | summarize count()"
                                    },
                                    "List": {
                                        "Query": "AzureDiagnostics | where Category like \"ddosprotectionnotifications\" | summarize arg_max(TimeGenerated, *) by publicIpAddress_s | where type_s like \"mitigationstarted\" | project publicIpAddress_s | join kind=inner (     AzureDiagnostics     | where Category like \"ddosmitigationflowlogs\" and not(Message contains \"forwarded\")     | summarize Flows=count() by destPublicIpAddress_s     | project publicIpAddress_s=destPublicIpAddress_s, Flows ) on publicIpAddress_s | project IP=publicIpAddress_s, Flows",
                                        "HideGraph": false,
                                        "enableSparklines": false,
                                        "operation": "Count",
                                        "ColumnsTitle": {
                                            "Name": "IP",
                                            "Value": "Flows Dropped (1/1000)"
                                        },
                                        "Color": "#0072c6",
                                        "thresholds": {
                                            "isEnabled": false,
                                            "values": [
                                                {
                                                    "name": "Normal",
                                                    "threshold": "Default",
                                                    "color": "#009e49",
                                                    "isDefault": true
                                                },
                                                {
                                                    "name": "Warning",
                                                    "threshold": "60",
                                                    "color": "#fcd116",
                                                    "isDefault": false
                                                },
                                                {
                                                    "name": "Error",
                                                    "threshold": "90",
                                                    "color": "#ba141a",
                                                    "isDefault": false
                                                }
                                            ]
                                        },
                                        "NameDSVSeparator": "",
                                        "NavigationQuery": "search {selected item} | sort by TimeGenerated desc",
                                        "NavigationSelect": {
                                            "NavigationQuery": "search {selected item} | sort by TimeGenerated desc"
                                        }
                                    },
                                    "Blade": {
                                        "NavigationSelect": {}
                                    }
                                }
                            },
                            {
                                "Id": "LineChartCalloutStackedBuilderBlade",
                                "Type": "Blade",
                                "Version": 0,
                                "Configuration": {
                                    "General": {
                                        "title": "Data type distribution",
                                        "newGroup": false
                                    },
                                    "charts": [
                                        {
                                            "Header": {
                                                "Title": "Total packets observed",
                                                "Subtitle": "1/1000 sample rate"
                                            },
                                            "LineChart": {
                                                "Query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" ",
                                                "yAxis": {
                                                    "isLogarithmic": false,
                                                    "units": {
                                                        "baseUnitType": "",
                                                        "baseUnit": "",
                                                        "displayUnit": ""
                                                    },
                                                    "customLabel": ""
                                                },
                                                "NavigationSelect": {}
                                            }
                                        },
                                        {
                                            "Header": {
                                                "Title": "Packets forwarded to service",
                                                "Subtitle": "1/1000 sample rate"
                                            },
                                            "LineChart": {
                                                "Query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" and Message contains \"forwarded\"",
                                                "yAxis": {
                                                    "isLogarithmic": false,
                                                    "units": {
                                                        "baseUnitType": "",
                                                        "baseUnit": "",
                                                        "displayUnit": ""
                                                    },
                                                    "customLabel": ""
                                                },
                                                "NavigationSelect": {}
                                            }
                                        },
                                        {
                                            "Header": {
                                                "Title": "Dropped packets",
                                                "Subtitle": "1/1000 sample rate"
                                            },
                                            "LineChart": {
                                                "Query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" and not(Message contains \"forwarded\")",
                                                "yAxis": {
                                                    "isLogarithmic": false,
                                                    "units": {
                                                        "baseUnitType": "",
                                                        "baseUnit": "",
                                                        "displayUnit": ""
                                                    },
                                                    "customLabel": ""
                                                },
                                                "NavigationSelect": {}
                                            }
                                        }
                                    ]
                                }
                            },
                            {
                                "Id": "TwoTrendsAndListBuilderBlade",
                                "Type": "Blade",
                                "Version": 0,
                                "Configuration": {
                                    "General": {
                                        "title": "Distribution by Source (1/1000 Sample rate)",
                                        "newGroup": false,
                                        "icon": "",
                                        "useIcon": false
                                    },
                                    "Trend1": {
                                        "Legend": "Total Flows",
                                        "LegendColor": "#00188f",
                                        "ChartQuery": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" ",
                                        "Calculation": {
                                            "Operation": "Sum"
                                        }
                                    },
                                    "Trend2": {
                                        "Legend": "Dropped",
                                        "LegendColor": "#ffb900",
                                        "ChartQuery": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" and not(Message contains \"forwarded\") ",
                                        "Calculation": {
                                            "Operation": "Sum"
                                        }
                                    },
                                    "List": {
                                        "Query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" | summarize Aggregate = count() by sourcePublicIpAddress_s | where Aggregate > 50 | order by Aggregate desc",
                                        "HideGraph": false,
                                        "enableSparklines": true,
                                        "operation": "Summary",
                                        "ColumnsTitle": {
                                            "Name": "Computer",
                                            "Value": "Total Flows (1/1000)"
                                        },
                                        "Color": "#0072c6",
                                        "thresholds": {
                                            "isEnabled": false,
                                            "values": [
                                                {
                                                    "name": "Normal",
                                                    "threshold": "Default",
                                                    "color": "#009e49",
                                                    "isDefault": true
                                                },
                                                {
                                                    "name": "Warning",
                                                    "threshold": "60",
                                                    "color": "#fcd116",
                                                    "isDefault": false
                                                },
                                                {
                                                    "name": "Error",
                                                    "threshold": "90",
                                                    "color": "#ba141a",
                                                    "isDefault": false
                                                }
                                            ]
                                        },
                                        "NameDSVSeparator": "",
                                        "NavigationQuery": "search {selected item} | sort by TimeGenerated desc",
                                        "NavigationSelect": {
                                            "NavigationQuery": "search {selected item} | sort by TimeGenerated desc"
                                        }
                                    },
                                    "Blade": {
                                        "NavigationSelect": {}
                                    }
                                }
                            },
                            {
                                "Id": "SingleQueryDonutBuilderBladeV1",
                                "Type": "Blade",
                                "Version": 0,
                                "Configuration": {
                                    "General": {
                                        "title": "Packet Action (1/1000 sample rate)",
                                        "newGroup": false,
                                        "icon": "",
                                        "useIcon": false
                                    },
                                    "Header": {
                                        "Title": "Top 3 actions taken",
                                        "Subtitle": "1/1000 Sample Rate"
                                    },
                                    "Donut": {
                                        "Query": "AzureDiagnostics |  where Category like \"ddosmitigationflowlogs\" | summarize AggregatedValue = count() by Message | order by AggregatedValue ",
                                        "CenterLegend": {
                                            "Text": "Total",
                                            "Operation": "Sum",
                                            "ArcsToSelect": []
                                        },
                                        "Options": {
                                            "colors": [
                                                "#00188f",
                                                "#0072c6",
                                                "#00bcf2"
                                            ],
                                            "valueColorMapping": []
                                        },
                                        "NavigationSelect": {}
                                    },
                                    "List": {
                                        "Query": "AzureDiagnostics |  where Category like \"ddosmitigationflowlogs\" | summarize AggregatedValue = count() by Message | order by AggregatedValue ",
                                        "HideGraph": false,
                                        "enableSparklines": false,
                                        "operation": "Summary",
                                        "ColumnsTitle": {
                                            "Name": "Action",
                                            "Value": "Count"
                                        },
                                        "Color": "#0072c6",
                                        "thresholds": {
                                            "isEnabled": false,
                                            "values": [
                                                {
                                                    "name": "Normal",
                                                    "threshold": "Default",
                                                    "color": "#009e49",
                                                    "isDefault": true
                                                },
                                                {
                                                    "name": "Warning",
                                                    "threshold": "60",
                                                    "color": "#fcd116",
                                                    "isDefault": false
                                                },
                                                {
                                                    "name": "Error",
                                                    "threshold": "90",
                                                    "color": "#ba141a",
                                                    "isDefault": false
                                                }
                                            ]
                                        },
                                        "NameDSVSeparator": "",
                                        "NavigationQuery": "search {selected item} | sort by TimeGenerated desc",
                                        "NavigationSelect": {
                                            "NavigationQuery": "search {selected item} | sort by TimeGenerated desc"
                                        }
                                    }
                                }
                            },
                            {
                                "Id": "SingleQueryDonutBuilderBladeV1",
                                "Type": "Blade",
                                "Version": 0,
                                "Configuration": {
                                    "General": {
                                        "title": "Distribution by Destination Port",
                                        "newGroup": false,
                                        "icon": "",
                                        "useIcon": false
                                    },
                                    "Header": {
                                        "Title": "Top 3 destination ports",
                                        "Subtitle": "1/1000 Sample Rate"
                                    },
                                    "Donut": {
                                        "Query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" | summarize AggregatedValue = count() by destPort_s | top 10 by destPort_s  | sort by AggregatedValue | project port=strcat(\"port: \", destPort_s), count=AggregatedValue",
                                        "CenterLegend": {
                                            "Text": "Total",
                                            "Operation": "Sum",
                                            "ArcsToSelect": []
                                        },
                                        "Options": {
                                            "colors": [
                                                "#00188f",
                                                "#0072c6",
                                                "#00bcf2"
                                            ],
                                            "valueColorMapping": []
                                        },
                                        "NavigationSelect": {}
                                    },
                                    "List": {
                                        "Query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" | summarize AggregatedValue = count() by destPort_s | top 5 by destPort_s  | sort by AggregatedValue",
                                        "HideGraph": false,
                                        "enableSparklines": true,
                                        "operation": "Summary",
                                        "ColumnsTitle": {
                                            "Name": "Port",
                                            "Value": "Count"
                                        },
                                        "Color": "#0072c6",
                                        "thresholds": {
                                            "isEnabled": false,
                                            "values": [
                                                {
                                                    "name": "Normal",
                                                    "threshold": "Default",
                                                    "color": "#009e49",
                                                    "isDefault": true
                                                },
                                                {
                                                    "name": "Warning",
                                                    "threshold": "60",
                                                    "color": "#fcd116",
                                                    "isDefault": false
                                                },
                                                {
                                                    "name": "Error",
                                                    "threshold": "90",
                                                    "color": "#ba141a",
                                                    "isDefault": false
                                                }
                                            ]
                                        },
                                        "NameDSVSeparator": "",
                                        "NavigationQuery": "search {selected item} | sort by TimeGenerated desc",
                                        "NavigationSelect": {
                                            "NavigationQuery": "search {selected item} | sort by TimeGenerated desc"
                                        }
                                    }
                                }
                            },
                            {
                                "Id": "LineChartBuilderBlade",
                                "Type": "Blade",
                                "Version": 0,
                                "Configuration": {
                                    "General": {
                                        "title": "Dropped packets by source",
                                        "newGroup": false,
                                        "icon": "",
                                        "useIcon": false
                                    },
                                    "Header": {
                                        "Title": "Dropped Packet Over Time",
                                        "Subtitle": "1/1000 sample rate"
                                    },
                                    "LineChart": {
                                        "Query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" and not(Message contains \"forwarded\") | sort by TimeGenerated desc",
                                        "yAxis": {
                                            "isLogarithmic": false,
                                            "units": {
                                                "baseUnitType": "",
                                                "baseUnit": "",
                                                "displayUnit": ""
                                            },
                                            "customLabel": ""
                                        },
                                        "NavigationSelect": {}
                                    },
                                    "List": {
                                        "Query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" | summarize Aggregate = count() by sourcePublicIpAddress_s | order by Aggregate desc",
                                        "HideGraph": false,
                                        "enableSparklines": true,
                                        "operation": "Summary",
                                        "ColumnsTitle": {
                                            "Name": "Type",
                                            "Value": "Count"
                                        },
                                        "Color": "#0072c6",
                                        "thresholds": {
                                            "isEnabled": true,
                                            "values": [
                                                {
                                                    "name": "Normal",
                                                    "threshold": "Default",
                                                    "color": "#009e49",
                                                    "isDefault": true
                                                },
                                                {
                                                    "name": "Warning",
                                                    "threshold": "10000",
                                                    "color": "#fcd116",
                                                    "isDefault": false
                                                },
                                                {
                                                    "name": "Error",
                                                    "threshold": "50000",
                                                    "color": "#ba141a",
                                                    "isDefault": false
                                                }
                                            ]
                                        },
                                        "NameDSVSeparator": "",
                                        "NavigationQuery": "search {selected item} | sort by TimeGenerated desc",
                                        "NavigationSelect": {
                                            "NavigationQuery": "search {selected item} | sort by TimeGenerated desc"
                                        }
                                    }
                                }
                            },
                            {
                                "Id": "NotableQueriesBuilderBlade",
                                "Type": "Blade",
                                "Version": 0,
                                "Configuration": {
                                    "General": {
                                        "title": "List of queries",
                                        "newGroup": false,
                                        "preselectedFilters": "Type, Computer",
                                        "renderMode": "grid"
                                    },
                                    "queries": [
                                        {
                                            "query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" and not(Message contains \"forwarded\") | sort by TimeGenerated desc",
                                            "displayName": "All dropped packets for all IPs"
                                        },
                                        {
                                            "query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" and not(Message contains \"forwarded\") | summarize count() by sourcePublicIpAddress_s",
                                            "displayName": "Dropped packets by IP"
                                        },
                                        {
                                            "query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" and not(Message contains \"forwarded\") | summarize aggregate=count() by destPort_s, sourcePublicIpAddress_s",
                                            "displayName": "Forwarded packets by destination port/IP"
                                        },
                                        {
                                            "query": "AzureDiagnostics | where Category like \"ddosmitigationflowlogs\" and Message contains \"forwarded\"",
                                            "displayName": "Forwarded packets by IP"
                                        }
                                    ]
                                }
                            }
                        ],
                        "Filters": [
                            {
                                "FieldName": "Public IP",
                                "QueryForValues": "search * | summarize AggregatedValue = count() by Computer",
                                "Title": "ipParam"
                            }
                        ],
                        "OverviewTile": {
                            "Id": "DoubleNumberBuilderTile",
                            "Type": "OverviewTile",
                            "Version": 2,
                            "Configuration": {
                                "TileOne": {
                                    "Legend": "IP addresses under mitigation this period",
                                    "Query": "AzureDiagnostics | where Category like \"ddosprotectionnotifications\" | summarize arg_max(TimeGenerated, *) by publicIpAddress_s | where type_s like \"mitigationstarted\" | summarize count()"
                                },
                                "TileTwo": {
                                    "Legend": "Total mitigations this period",
                                    "Query": "AzureDiagnostics | where Category like \"ddosprotectionnotifications\" | where type_s like \"mitigationstarted\" | summarize count()"
                                },
                                "Advanced": {
                                    "DataFlowVerification": {
                                        "Enabled": false,
                                        "Query": "search * | limit 1 | project TimeGenerated",
                                        "Message": ""
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        }
    ]
